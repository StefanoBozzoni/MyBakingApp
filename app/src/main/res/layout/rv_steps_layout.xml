<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/card_background"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="@dimen/margin8dp"
    android:layout_marginRight="@dimen/margin8dp"
    android:layout_marginTop="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="@dimen/iv_play_width"
                    android:layout_height="@dimen/iv_play_height"
                    android:layout_marginBottom="@dimen/margin8dp"
                    android:layout_marginTop="@dimen/margin8dp"
                    android:adjustViewBounds="false"
                    android:src="@drawable/ic_play_svg" />

                <TextView
                    android:id="@+id/tv_step_short_descr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin13dp"
                    android:layout_toEndOf="@+id/iv_play"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/dimen24sp"
                    tools:text="Step x" />
        </RelativeLayout>
</android.support.v7.widget.CardView>